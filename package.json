{
    "description": "website",
    "devDependencies": {
        "webOptimizer": "git+ssh://git@github.com/thaibault/webOptimizer.git",
        "jQuery-website": "git+ssh://git@github.com/thaibault/jQuery-website.git",
        "bootstrap": "^3.3.6"
    },
    "license": "CC-BY-3.0",
    "name": "website",
    "version": "1.0.0",
    "keywords": ["website"],
    "files": ["source"],
    "main": "source/javaScript/main.js",
    "repository": {"type": "git", "url": "git@github.io:thaibault/.git"},
    "webOptimizer": {
        "debug": true,
        "moduleAliases": {
            "jquery": "jquery/src/jquery",
            "bootstrap": "bootstrap/dist/css/bootstrap"
        },
        "internalInjects": [
            "less/main",
            "javaScript/main"
        ],
        "externalInjects": ["babel-polyfill"],
        "preprocessor": {
            "modernJavaScript": {
                "plugins": [
                    "transform-decorators-legacy",
                    "transform-class-properties",
                    "transform-flow-strip-types"
                ]
            }
        }
    },
    "scripts": {
        "lint": "webOptimizer lint",
        "clear": "webOptimizer clear",
        "build": "webOptimizer build",
        "server": "webOptimizer server",
        "start": "webOptimizer server"
    }
}
