{
    "name": "website",
    "description": "website",
    "version": "1.0.0",
    "license": "CC-BY-3.0",
    "keywords": ["website"],
    "dependencies": {
        "Swipe": "https://github.com/thebird/Swipe",
        "webOptimizer": "git+ssh://git@github.com/thaibault/webOptimizer.git",
        "jQuery-website": "git+ssh://git@github.com/thaibault/jQuery-website.git",
        "legalNotes": "git+ssh://git@github.com/thaibault/legalNotes.git",
        "bootstrap": "^3.3.6"
    },
    "devDependencies": {"qunitjs": "*"},
    "files": ["source"],
    "main": "source/javaScript/main.js",
    "repository": {"type": "git", "url": "git@github.io:thaibault/.git"},
    "webOptimizer": {
        "library": false,
        "moduleAliases": {
            "jquery": "jquery/src/jquery",
            "bootstrap": "bootstrap/dist/css/bootstrap",
            "swipe": "Swipe/swipe"
        },
        "injects": {
            "internal": ["less/main", "javaScript/main"],
            "external": ["babel-polyfill"]
        },
        "preprocessor": {
            "modernJavaScript": {
                "plugins": [
                    "transform-decorators-legacy",
                    "transform-class-properties",
                    "transform-flow-strip-types"
                ]
            }
        }
    },
    "scripts": {
        "lint": "webOptimizer lint",
        "clear": "webOptimizer clear",
        "build": "webOptimizer build",
        "serve": "webOptimizer serve",
        "start": "webOptimizer serve"
    }
}
