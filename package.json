{
    "name": "website",
    "description": "Here's my website development hosted (no security by obscurity).",
    "version": "1.0.0",
    "license": "CC-BY-3.0",
    "keywords": ["website"],
    "dependencies": {
        "bootstrap": "^3.3.6",
        "Swipe": "https://github.com/thebird/Swipe",
        "webOptimizer": "git+ssh://git@github.com/thaibault/webOptimizer.git",
        "jQuery-website": "git+ssh://git@github.com/thaibault/jQuery-website.git",
        "legalNotes": "git+ssh://git@github.com/thaibault/legalNotes.git"
    },
    "files": ["source"],
    "main": "build/index.html",
    "repository": {"type": "git", "url": "git@github.io:thaibault/.git"},
    "webOptimizer": {
        "injection": {"internal": {
            "__execute__": "{vendor: self.debug ? ['jQuery-website'] : [], index: ['index.less'].concat(self.debug ? [] : 'babel-polyfill').concat(['index.js'])}"
        }},
        "library": false,
        "module": {
            "aliases": {
                "babel-polyfill$": "babel-polyfill/dist/polyfill.min",
                "bootstrap.less$": "bootstrap/less/bootstrap",
                "swipe$": "Swipe/swipe",
                "jQuery-scrollTo$": "jquery.scrollto/jquery.scrollTo",
                "jQuery-spin$": "spin.js/jquery.spin",
                "genericStyle.less$": "genericStyle/index.less",
                "jQuery-website.less$": "jQuery-website/index.less"
            },
            "skipParseRegularExpression": {
                "__execute__": "/\\/(?:(?:jquery)|(?:module)|(?:spin)|([^/]+\\.min))\\.js(?:\\?.+|$)/"
            }
        },
        "path": {"asset": {"javaScript": "./", "less": "./"}}
    },
    "scripts": {
        "build": "webOptimizer build",
        "buildDLL": "webOptimizer buildDLL",
        "buildWithStats": "webOptimizer build --profile --json >/tmp/stat.json && echo 'Results successfully written to \"/tmp/stat.json\".'",
        "clear": "webOptimizer clear",
        "document": "webOptimizer document",
        "lint": "webOptimizer typeCheck && webOptimizer lint",
        "postinstall": "npm run build",
        "preinstall": "mkdir --parents build && touch build/index.html",
        "serve": "webOptimizer serve",
        "start": "webOptimizer serve",
        "watch": "webOptimizer build --watch"
    }
}
